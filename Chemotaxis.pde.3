Bacteria[] Walk = new Bacteria[100];
void setup() {
  background(0);
  frameRate(60);
  size(800, 800);
  for (int i = 0; i < Walk.length; i++) {
    Walk[i] = new Bacteria();
  }
}
int m = 2;
int s = 5;

void draw() {
  for (int i = 0; i < Walk.length; i++) {
    Walk[i].move();
    Walk[i].show();
  }
}
class Bacteria {
  int myX, myY, myColor;
  Bacteria() {
    myX = (int)(Math.random()*8)+396;
    myY = (int)(Math.random()*8)+396;
    myColor = color((int)(Math.random()*255),(int)(Math.random()*255),(int)(Math.random()*255));
  }
  void move() {
    myX = myX + ((int)(Math.random()*s)-m);
    myY = myY + ((int)(Math.random()*s)-m);
  }
  void show() {
    noStroke();
    fill(myColor);
    ellipse(myX, myY, 2, 2);
  }
}
